<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <include layout="@layout/develop_top_rel"/>
    <TextView
        android:id="@+id/announcement_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:lineSpacingExtra="6dp"
        android:layout_marginTop="20dp"
        android:textColor="#333"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/announcement_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:lineSpacingExtra="6dp"
        android:layout_marginTop="10dp"
        android:textColor="#999"
        android:textSize="12sp" />

    <View
        android:layout_width="20dp"
        android:layout_height="2dp"
        android:layout_margin="10dp"
        android:background="@color/main_color"/>

    <WebView
        android:id="@+id/announcement_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:lineSpacingExtra="8dp"
        android:layout_marginTop="10dp"
        android:textColor="#999"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/announcement_like_lin"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/gray_line_10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/announcement_like_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@mipmap/like_false" />

        <TextView
            android:id="@+id/announcement_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#333"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>