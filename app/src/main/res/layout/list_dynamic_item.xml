<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_margin="10dp">
    <ImageView
        android:id="@+id/activity_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
        <TextView
            android:id="@+id/activity_status_text"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12.5sp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@mipmap/buttom_back"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/dynamic_title_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="17sp"
            android:maxLines="2"
            android:lineSpacingExtra="5dp"
            android:layout_toLeftOf="@+id/dynamic_collect_rel"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/dynamic_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="12sp"
            android:layout_toLeftOf="@+id/dynamic_collect_rel"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/dynamic_title_item"
           />
        <RelativeLayout
            android:id="@+id/dynamic_collect_rel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/dynamic_collect_img"
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/collect_gray"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEE"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>