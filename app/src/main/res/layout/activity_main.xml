<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_line" />
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/view_bottom"
        android:background="#EFEFEF"/>
    <LinearLayout
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:background="#fff">
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/fragment_home_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fragment_home_page_img"
                android:layout_width="21dp"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/home_page_true" />

            <TextView
                android:id="@+id/fragment_home_page_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="7dp"
                android:layout_gravity="bottom"
                android:textColor="@color/main_color"
                android:text="首页"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_culture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fragment_culture_img"
                android:layout_width="26dp"
                android:layout_height="21dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/cultrue_false" />

            <TextView
                android:id="@+id/fragment_culture_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="文物拾遗"
                android:textColor="@color/gray_color"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_voice"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/voice_false" />

            <TextView
                android:id="@+id/fragment_voice_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray_color"
                android:text="语音导航"
                android:textSize="12dp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fragment_policy"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:id="@+id/fragment_policy_img"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/policy_false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/fragment_policy_text"
                android:layout_marginTop="7dp"
                android:textColor="@color/gray_color"
                android:text="政策法规"
                android:textSize="12dp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fragment_person"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:layout_marginTop="2dp"
                android:id="@+id/fragment_person_img"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/person_false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/fragment_person_text"
                android:layout_marginTop="6dp"
                android:textColor="@color/gray_color"
                android:text="个人"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>