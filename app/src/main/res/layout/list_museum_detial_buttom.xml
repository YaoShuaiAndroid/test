<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    >
    <LinearLayout
        android:id="@+id/view_bottom1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:id="@+id/fragment_dynamic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fragment_dynamic_img"
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/dynamic_false" />

            <TextView
                android:id="@+id/fragment_dynamic_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="动态"
                android:textColor="@color/gray_color"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fragment_show_img"
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/show_false" />

            <TextView
                android:id="@+id/fragment_show_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="展览"
                android:textColor="@color/gray_color"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_voice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:background="@mipmap/voice_false" />

            <TextView
                android:id="@+id/fragment_voice_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="语音导航"
                android:textColor="@color/gray_color"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_collect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fragment_collect_img"
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/collect_false" />

            <TextView
                android:id="@+id/fragment_collect_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="馆藏"
                android:textColor="@color/gray_color"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_appointment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fragment_appointment_img"
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/appointment_false" />

            <TextView
                android:id="@+id/fragment_appointment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="预约"
                android:textColor="@color/gray_color"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/view_bottom"
        android:background="#EFEFEF" />

    <ImageView
        android:id="@+id/museum_tour_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@mipmap/museum_img"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>