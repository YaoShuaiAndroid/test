<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/top_color"
    android:orientation="vertical">

    <include layout="@layout/develop_top_rel"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="#FFF">
        <LinearLayout
            android:id="@+id/appoint_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/main_color"
                android:text="积分使用规则"/>
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/role_question"/>
        </LinearLayout>
        
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="96dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/yellow_role">
            <TextView
                android:id="@+id/role_appoint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"
                android:textSize="25sp"
                android:text="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:layout_below="@+id/role_appoint_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:text="积分"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:text="0积分即将过期"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:layout_marginTop="60dp"
            android:lineSpacingExtra="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_horizontal"
            android:text="积分是指用户成功获取后，平台按照规则返还给用户的一种福利，积分可以在积分活动中兑换商品。积分数量越多则在积分商城中可兑换的商品选择就越多。"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:text="如何获取积分"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:lineSpacingExtra="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:text="所有的用户注册后将获取10积分"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="17sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/top_back_5dp"
            android:text="消费积分通道正在开通中"/>
    </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="255dp"
        android:background="@mipmap/role_line">
    </RelativeLayout>
</RelativeLayout>
