<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/activity_detail_img"
            android:layout_width="match_parent"
            android:layout_height="175dp"
             />

        <RelativeLayout
            android:id="@+id/activity_collect_rel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/activity_isColl_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/collect_gray" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:lineSpacingExtra="9dp"
        android:textColor="#333"
        android:textSize="21sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/activity_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动时间："
            android:textColor="@color/main_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/activity_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_date"
            android:layout_marginTop="5dp"
            android:text="活动地点："
            android:textColor="@color/main_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/activity_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_address"
            android:layout_marginTop="5dp"
            android:text="人数：0"
            android:textColor="@color/main_color"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/activity_detail_sign_up"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/buttom_back"
            android:gravity="center"
            android:text="立即报名"
            android:textColor="#FFF"
            android:textSize="13sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:layout_margin="10dp"
            android:background="@color/main_color" />
    </RelativeLayout>

    <WebView
        android:id="@+id/activity_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:lineSpacingExtra="8dp"
        android:focusable="false"
        android:textColor="#999"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/activity_detail_like_lin"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/gray_line_10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_detail_like_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@mipmap/like_false" />

        <TextView
            android:id="@+id/activity_detail_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textColor="#333"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8F8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_back_top_5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/line"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:background="#FFF"
                    android:gravity="center"
                    android:text="评论列表"
                    android:textColor="#999"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_detail_message_rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="8dp"
                    android:background="@mipmap/cultrue_message" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f8f8f8" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>