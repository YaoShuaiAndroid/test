<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/develop_top_rel"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/policy_detail_lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:id="@+id/policy_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:lineSpacingExtra="6dp"
                android:layout_marginTop="10dp"
                android:textColor="#333"
                android:textSize="21sp" />


            <TextView
                android:id="@+id/policy_detail_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:lineSpacingExtra="6dp"
                android:layout_marginTop="10dp"
                android:textColor="#999"
                android:textSize="13sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:background="@color/main_color"/>

            <TextView
                android:id="@+id/policy_detail_digest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:lineSpacingExtra="6dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gray_line"
                android:padding="10dp"
                android:textColor="#aaa"
                android:textSize="12sp" />

     <!--       <TextView
                android:id="@+id/policy_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:lineSpacingExtra="8dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:textColor="#999"
                android:textSize="12sp" />-->

            <WebView
                android:id="@+id/policy_detail_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
